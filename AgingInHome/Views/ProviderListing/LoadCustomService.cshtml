@{
    var i = (int)ViewBag.customId;
}
<div class="row">
    <div class="remove-icon customeremove" id="rmoveCustom_@i" data-index="@i">
        <a href="#" ><i class="fa fa-trash-o" aria-hidden="true"></i></a>
    </div>
    <div class="CustomRowListItem clearfix">
        <div class="col-sm-4">
            <div class="form-group">
                <input type="text" id="ServiceDetailsCustomeService_@i" name="ServiceDetails[@i].CustomeService" value="" placeholder="Services Name" class="form-control _textcustSer" />
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">              
                <select class="selectpicker" id="ServiceDetailsServiceType_@i" name="ServiceDetails[@i].ServiceType" placeholder="Select Service Type">
                    <option>Select Service type</option>
                    <option value="hour">Hour</option>
                    <option value="visit">Visit</option>
                    <option value="Service">Service</option>
                </select>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="form-group">
              @Html.TextBox("ServiceDetails[" + @i + "].ServicePrice", null, new { @class = "form-control numriconly", @maxlength = "10", @placeholder = "Services Price" })                
            </div>
        </div>
    </div>
</div>

