                        window.location.href = "@Url.Action("Dashboard","Consumer")";
                    }
                });
            }
            else {
                if ($("#UserId").val() != "") {
                    e.preventDefault();
                    if ($("[type='checkbox']:checked").length > 0) {
                        $(".fa-spinner").show();

                        $.ajax({
                            url: "@Url.Action("ServiceRequestDetails", "Consumer")",
